<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Book name</th>
      <th>Author name</th>
      <th>Description</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.Book_name %></td>
        <td><%= book.Author_name %></td>
        <td><%= book.Description %></td>
        <td><%= link_to 'Show', book , class:"btn btn-secondary"%></td>
        <td><%= link_to 'Edit', edit_book_path(book) , class:"btn btn-secondary"%></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-secondary" %></td>
        <td><%= link_to 'Assign to Student',students_path, class:"btn btn-secondary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path, class:"btn btn-secondary" %>
